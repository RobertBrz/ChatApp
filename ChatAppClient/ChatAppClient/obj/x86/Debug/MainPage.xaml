<Page x:ConnectionId='1'
    x:Class="ChatAppClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatAppClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Button x:ConnectionId='15' x:Name="ButtonShowPane"                  Content="&#xE715;"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <SplitView x:ConnectionId='5'  x:Name="SplitViewPanel_Menu" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="0" OpenPaneLength="150">
                        <SplitView.Pane>
                            <StackPanel Background="Gray">
                                <!--<Button x:Name="Button_ShowMenu" FontFamily="Segeo MDL2 Assets" Content="&#xF00F;" Width="50" Height="50" Background="Transparent" Click="ShowPane" />-->
                                <StackPanel Orientation="Horizontal">
                                    <Button x:ConnectionId='8' x:Name="Images" FontFamily="Segeo MDL2 Assets" Content="&#xE715;" Width="50" Height="50" Background="Transparent"  />
                                    <TextBlock Text="Images" FontSize="18" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:ConnectionId='7' x:Name="settings" FontFamily="Segeo MDL2 Assets"   Content="&#xE713;" Width="50" Height="50" Background="Transparent"                        />
                                    <TextBlock Text="Settings" FontSize="18" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:ConnectionId='6' x:Name="Button_Addcontact" FontFamily="Segeo MDL2 Assets" Content="&#xE1CE;" Width="50" Height="50" Background="Transparent"                          />
                                    <TextBlock Text="Add Contact" FontSize="18" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </SplitView.Pane>
                        <SplitView.Content>
                            <ListView x:ConnectionId='9' x:Name="lsitviewcontacts"                                                                                   >
                                <ListView.ItemTemplate>
                                    <DataTemplate x:Name="ContactsData"                               >
                                        <StackPanel x:ConnectionId='11' Orientation="Horizontal" Height="64">
                                            <Ellipse Height="48" Width="48" VerticalAlignment="Center">
                                                <Ellipse.Fill>
                                                    <ImageBrush x:ConnectionId='14'                                    />
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Center"  >
                                                <TextBlock x:ConnectionId='12' x:Name="PickedName"                       Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                                                <TextBlock x:ConnectionId='13' x:Name="PicekdSurname"                         Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </SplitView.Content>
                    </SplitView>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <SplitView x:ConnectionId='2'  x:Name="SplitViewPanel_Info" DisplayMode="CompactOverlay" IsPaneOpen="False"  HorizontalAlignment="Stretch"  VerticalAlignment="Top" Background="gray">
                    <StackPanel Orientation="Vertical"  >
                        <TextBlock x:ConnectionId='3' x:Name="PickedName"                                      />
                        <TextBlock x:ConnectionId='4' x:Name="PickedSurname"                                                />
                    </StackPanel>
                </SplitView>
            </Grid>


            <!--<Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                
                
                
                <Grid Grid.Row="0" Background="Azure">
                    
                </Grid>
                <Grid Grid.Row="1">

                </Grid>-->

        </Grid>
    </Grid>



</Page>

